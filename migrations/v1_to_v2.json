{
    "name": "v1_to_v2",
    "from": "1.0",
    "to": "2.0",
    "steps": [
        {
            "op": "wrap",
            "path": "router/security",
            "wrapAs": "roles"
        },
        {
            "op": "move",
            "from": "router/securityEnabled",
            "to": "router/security/enabled"
        },
        {
            "op": "mapArray",
            "path": "router/security/roles/*/permissions",
            "rule": {
                "stringToObject": true,
                "separator": ":",
                "suffix": ":data",
                "value": true
            }
        }
    ]
}